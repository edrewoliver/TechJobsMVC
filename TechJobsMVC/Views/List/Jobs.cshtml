

<div class="container body-content">

    <h1>@ViewBag.title</h1>



    <table class="job-listing">

        @foreach (var job in ViewBag.jobs)
        {
            //TODO #1: Use a loop to display job results in a table.
        <tr>
            <td>
                ID:
                @job.Id
                <br />
                Name:
                @job.Name
                <br />
                Employer:
                @job.Employer
                <br />
                Location:
                @job.Location
                <br />
                Position Type:
                @job.PositionType
                <br />
                Core Competency:
                @job.CoreCompetency
            </td>
        </tr>
        }
    </table>
</div>